<p id="notice"><%= notice %></p>

<br><br>
<figure class="image is-3by1">
    <%= image_tag(@article.featured_image) if @article.featured_image.attached? %>
</figure><br>
<div class="columns">
  <div class="column">
    <p class="title"><%= @article.title %></p>
  </div>
</div><br><br>
<div class="columns">
  <div class="column is-three-quarters"><%= @article.body %>
  <div class="column is-three-quarters">Autor: <%= @article.author %>
</div>

<ul>
<br>
<div class="btn-group" role="group" aria-label="Basic outlined example">
<%= link_to 'Editar', edit_article_path(@article), :class => "btn btn-outline-primary" %>
<%= link_to 'Voltar', articles_path, :class => "btn btn-outline-primary" %>
</div>
</ul>
<hr>
<h2>Comente a publicação:</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :Título %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :Comentário %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>